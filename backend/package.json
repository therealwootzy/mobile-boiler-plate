{
  "name": "mobile-boilerplate-backend",
  "version": "1.0.0",
  "description": "Backend API pour app mobile avec Koa et PostgreSQL",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "migrate": "knex migrate:latest",
    "migrate:rollback": "knex migrate:rollback",
    "migrate:rollback:all": "knex migrate:rollback --all",
    "migrate:status": "knex migrate:status",
    "migrate:make": "knex migrate:make",
    "migrate:up": "knex migrate:up",
    "migrate:down": "knex migrate:down",
    "seed": "knex seed:run"
  },
  "dependencies": {
    "koa": "^2.14.2",
    "koa-router": "^12.0.0",
    "koa-bodyparser": "^4.4.1",
    "koa-cors": "^0.0.16",
    "koa-logger": "^3.2.1",
    "knex": "^3.0.1",
    "pg": "^8.11.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}